<%- include('../partials/header') %>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Quản lý Đánh giá</h1>
    </div>

    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Khách hàng</th>
                            <th>Sản phẩm</th>
                            <th>Đánh giá</th>
                            <th>Bình luận</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="reviews-table-body">
                        <% if (reviews && reviews.length> 0) { %>
                            <% reviews.forEach(review=> { %>
                                <tr id="review-row-<%= review.id %>">
                                    <td>
                                        <%= review.id %>
                                    </td>
                                    <td>
                                        <% if(review.user) { %>
                                            <div><strong>
                                                    <%= review.user.ho_ten %>
                                                </strong></div>
                                            <small class="text-muted">
                                                <%= review.user.email %>
                                            </small>
                                            <% } else { %>
                                                <span class="text-danger">Người dùng đã xóa</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <% if(review.product) { %>
                                            <div class="d-flex align-items-center">
                                                <img src="<%= review.product.img %>"
                                                    alt="<%= review.product.ten_sach %>" width="40"
                                                    class="me-2 rounded">
                                                <span class="text-truncate" style="max-width: 150px;">
                                                    <%= review.product.ten_sach %>
                                                </span>
                                            </div>
                                            <% } else { %>
                                                <span class="text-danger">Sản phẩm đã xóa</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <div class="text-warning">
                                            <% for(let i=1; i <=5; i++) { %>
                                                <% if (i <=review.rating) { %>
                                                    <i class="fas fa-star"></i>
                                                    <% } else { %>
                                                        <i class="far fa-star"></i>
                                                        <% } %>
                                                            <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="mb-0 text-break" style="max-width: 300px;">
                                            <%= review.comment %>
                                        </p>
                                    </td>
                                    <td>
                                        <%= new Date(review.createdAt).toLocaleDateString('vi-VN') %>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-danger delete-review-btn"
                                            data-id="<%= review.id %>" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="7" class="text-center py-4">Chưa có đánh giá nào.</td>
                                        </tr>
                                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Phân trang -->
        <% if (totalPages> 1) { %>
            <div class="card-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-end mb-0">
                        <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Trước</a>
                        </li>
                        <% for(let i=1; i <=totalPages; i++) { %>
                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>">
                                    <%= i %>
                                </a>
                            </li>
                            <% } %>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">Sau</a>
                                </li>
                    </ul>
                </nav>
            </div>
            <% } %>
    </div>

    <%- include('../partials/footer') %>

        <script src="/js/admin-reviews.js"></script>