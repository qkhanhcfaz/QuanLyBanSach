<%- include('../partials/header') %>

    <div class="container-fluid">

        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Thống kê Đơn hàng</h1>
        </div>

        <!-- ========================================================== -->
        <!-- ============== KHU VỰC BỘ LỌC NGÀY THÁNG ================ -->
        <!-- ========================================================== -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Bộ lọc thống kê</h6>
            </div>
            <div class="card-body">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <div class="form-group mb-md-0">
                            <label for="start-date">Từ ngày:</label>
                            <input type="date" id="start-date" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group mb-md-0">
                            <label for="end-date">Đến ngày:</label>
                            <input type="date" id="end-date" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <button id="filter-btn" class="btn btn-primary btn-block">
                            <i class="fas fa-filter mr-2"></i>Lọc
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- ========================================================== -->
        <!-- ============== BIỂU ĐỒ SỐ LƯỢNG ĐƠN HÀNG ================ -->
        <!-- ========================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 id="chart-title" class="m-0 font-weight-bold text-primary">Biểu đồ số lượng đơn hàng</h6>
                    </div>
                    <div class="card-body">
                        <div class="chart-area" style="height: 400px;">
                            <!-- Sử dụng ID khác biệt cho chart -->
                            <canvas id="orders-chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <!-- Tái sử dụng và mở rộng logic của dashboard -->
        <script src="/js/admin-dashboard.js"></script>