<!-- File: /views/admin/partials/header.ejs (Phiên bản gộp Sidebar và Top Nav) -->

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - <%= title %>
    </title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome 6 cho các icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- File CSS tùy chỉnh cho trang Admin -->
    <link rel="stylesheet" href="/css/admin-style.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Script bảo vệ trang Admin, chạy trước để kiểm tra quyền -->
    <script src="/js/admin-auth.js"></script>
</head>

<body>
    <div class="d-flex" id="wrapper">

        <div class="bg-dark" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 text-light fs-4 text-uppercase border-bottom">
                <i class="fas fa-book-open-reader me-2"></i>BookStore
            </div>
            <div class="list-group list-group-flush my-3">
                <!-- Dashboard -->
                <a href="/admin"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/') ? 'active-admin' : '' %>">
                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>

                <!-- Thống kê (Dropdown) -->
                <a href="#statisticsSubmenu" data-bs-toggle="collapse" aria-expanded="false"
                    class="list-group-item list-group-item-action bg-transparent text-light dropdown-toggle">
                    <i class="fas fa-chart-bar me-2"></i>Thống kê
                </a>
                <div class="collapse <%= (typeof path !== 'undefined' && path.startsWith('/statistics')) ? 'show' : '' %>"
                    id="statisticsSubmenu">
                    <a href="/admin/statistics/revenue"
                        class="list-group-item list-group-item-action bg-transparent text-light ps-5 border-0 small <%= (typeof path !== 'undefined' && path === '/statistics/revenue') ? 'active-admin' : '' %>">
                        <i class="fas fa-file-invoice-dollar me-2"></i>Doanh thu
                    </a>
                    <a href="/admin/statistics/orders"
                        class="list-group-item list-group-item-action bg-transparent text-light ps-5 border-0 small <%= (typeof path !== 'undefined' && path === '/statistics/orders') ? 'active-admin' : '' %>">
                        <i class="fas fa-shopping-bag me-2"></i>Đơn hàng
                    </a>
                    <a href="/admin/statistics/best-selling"
                        class="list-group-item list-group-item-action bg-transparent text-light ps-5 border-0 small <%= (typeof path !== 'undefined' && path === '/statistics/best-selling') ? 'active-admin' : '' %>">
                        <i class="fas fa-cart-arrow-down me-2"></i>Sản phẩm bán chạy
                    </a>
                </div>

                <!-- Sản phẩm -->
                <a href="/admin/products"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/products') ? 'active-admin' : '' %>">
                    <i class="fas fa-book me-2"></i>Sản phẩm
                </a>
                <!-- Danh mục -->
                <a href="/admin/categories"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/categories') ? 'active-admin' : '' %>">
                    <i class="fas fa-list-alt me-2"></i>Danh mục
                </a>
                <!-- Đánh giá -->
                <a href="/admin/reviews"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/reviews') ? 'active-admin' : '' %>">
                    <i class="fas fa-star me-2"></i>Đánh giá
                </a>
                <!-- Đơn hàng -->
                <a href="/admin/orders"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/orders') ? 'active-admin' : '' %>">
                    <i class="fas fa-shopping-cart me-2"></i>Đơn hàng
                </a>
                <!-- Nhập hàng (Đã ẩn) -->
                <!-- <a href="/admin/receipts"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/receipts') ? 'active-admin' : '' %>">
                    <i class="fas fa-receipt me-2"></i>Nhập hàng
                </a> -->
                <a href="/admin/promotions"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/promotions') ? 'active-admin' : '' %>">
                    <i class="fas fa-tags me-2"></i>Khuyến mãi
                </a>
                <!-- Người dùng -->
                <a href="/admin/users"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/users') ? 'active-admin' : '' %>">
                    <i class="fas fa-users me-2"></i>Người dùng
                </a>
                <!-- Bài viết (Blog) -->
                <a href="/admin/posts"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/posts') ? 'active-admin' : '' %>">
                    <i class="fas fa-newspaper me-2"></i>Bài viết
                </a>
                <!-- Liên hệ -->
                <a href="/admin/contacts"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/contacts') ? 'active-admin' : '' %>">
                    <i class="fas fa-envelope me-2"></i>Liên hệ
                </a>
                <!-- Cấu hình -->
                <a href="/admin/settings"
                    class="list-group-item list-group-item-action bg-transparent text-light <%= (typeof path !== 'undefined' && path === '/settings') ? 'active-admin' : '' %>">
                    <i class="fas fa-cogs me-2"></i>Cấu hình Website
                </a>
                <!-- Về trang người dùng -->
                <a href="/" target="_blank"
                    class="list-group-item list-group-item-action bg-transparent text-danger mt-auto">
                    <i class="fas fa-sign-out-alt me-2"></i>Về trang người dùng
                </a>
            </div>
        </div>


        <!-- Page Content Wrapper -->
        <div id="page-content-wrapper">
            <!-- ======================================= -->
            <!--        BẮT ĐẦU TOP NAVIGATION          -->
            <!-- ======================================= -->
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left text-secondary fs-4 me-3" id="menu-toggle"></i>
                    <h2 class="fs-2 m-0">
                        <%= title %>
                    </h2>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark fw-bold" href="#" id="navbarDropdown"
                                role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user me-2"></i><span id="admin-name">Admin</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#">Profile</a></li>
                                <li><a class="dropdown-item" href="#">Settings</a></li>
                                <li><a class="dropdown-item" href="#" id="logout-btn">Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>


            <div class="container-fluid px-4">
                <!-- Nội dung chính của mỗi trang sẽ bắt đầu từ đây -->