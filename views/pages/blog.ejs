<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1>Tin tức & Bài viết</h1>
        </div>
        <div class="col-md-6">
            <form action="/blog" method="GET" class="d-flex">
                <input class="form-control me-2" type="search" name="keyword" placeholder="Tìm kiếm bài viết..." value="<%= typeof keyword !== 'undefined' ? keyword : '' %>">
                <button class="btn btn-outline-success" type="submit">Tìm</button>
            </form>
        </div>
    </div>

    <% if (posts.length === 0) { %>
        <div class="alert alert-info text-center">
            Chưa có bài viết nào hoặc không tìm thấy bài viết phù hợp.
        </div>
    <% } else { %>
        <div class="row g-4">
            <% posts.forEach(post => { %>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= post.hinh_anh || 'https://via.placeholder.com/600x400' %>" class="card-img-top" alt="<%= post.tieu_de %>" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate" title="<%= post.tieu_de %>"><%= post.tieu_de %></h5>
                            <p class="card-text text-muted small">
                                <i class="fas fa-user"></i> <%= post.author ? post.author.ho_ten : 'Admin' %> | 
                                <i class="far fa-clock"></i> <%= new Date(post.createdAt).toLocaleDateString('vi-VN') %>
                            </p>
                            <p class="card-text flex-grow-1"><%= post.tom_tat %></p>
                            <a href="/blog/<%= post.id %>" class="btn btn-primary mt-auto">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation" class="mt-5">
                <ul class="pagination justify-content-center">
                    <% for(let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage == i ? 'active' : '' %>">
                            <a class="page-link" href="/blog?page=<%= i %>&keyword=<%= typeof keyword !== 'undefined' ? keyword : '' %>"><%= i %></a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    <% } %>
</div>

<%- include('../partials/footer') %>
