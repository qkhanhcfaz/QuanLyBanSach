<%- include('../partials/header') %>
    <div class="container py-5">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3">
                <%- include('../partials/profile-sidebar', { activePage: 'orders' }) %>
            </div>

            <!-- Main Content -->
            <div class="col-lg-9">
                <h1 class="h3 mb-4">Đơn hàng của bạn</h1>

                <!-- Filter Box -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-0">
                        <ul class="nav nav-tabs flex-nowrap overflow-auto border-0" id="order-status-tabs"
                            style="white-space: nowrap;">
                            <li class="nav-item">
                                <a class="nav-link active" href="#" data-status="all">Tất cả</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-status="pending">Chờ xác nhận</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-status="confirmed">Đã xác nhận</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-status="shipping">Đang giao</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-status="delivered">Hoàn thành</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#" data-status="cancelled">Đã hủy</a>
                            </li>
                        </ul>
                    </div>
                </div>

                <div id="orders-container">
                    <p>Đang tải đơn hàng...</p>
                </div>

                <!-- Pagination Row -->
                <div class="d-flex justify-content-center mt-4">
                    <nav aria-label="Order pagination">
                        <ul class="pagination pagination-sm" id="pagination-container">
                            <!-- Pagination JS will inject here -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <style>
        #order-status-tabs .nav-link {
            color: #495057;
            border: none;
            padding: 12px 24px;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 0;
            border-bottom: 3px solid transparent;
        }

        #order-status-tabs .nav-link:hover {
            color: #0d6efd;
            background-color: rgba(13, 110, 253, 0.05);
        }

        #order-status-tabs .nav-link.active {
            color: #0d6efd;
            background: transparent;
            border-bottom: 3px solid #0d6efd;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, .02);
        }

        .pagination .page-link {
            border-radius: 5px;
            margin: 0 2px;
            color: #495057;
            border: 1px solid #dee2e6;
        }

        .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
        }

        /* Hide scrollbar but keep functionality */
        #order-status-tabs::-webkit-scrollbar {
            display: none;
        }
    </style>

    <script src="/js/my-orders.js"></script>
    <%- include('../partials/footer') %>