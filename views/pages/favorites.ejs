<%- include('../partials/header') %>

    <div class="container my-5">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Sách yêu thích</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Sách yêu thích của bạn</h1>
            <span class="text-muted">
                <%= products.length %> sản phẩm
            </span>
        </div>

        <!-- Lưới sản phẩm -->
        <% if (products && products.length> 0) { %>
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
                <% products.forEach(product=> { %>
                    <div class="col">
                        <div class="card h-100 product-card position-relative">
                            <div class="position-relative">
                                <a href="/products/<%= product.id %>">
                                    <img class="card-img-top" src="<%= product.img || '/images/placeholder.png' %>"
                                        alt="<%= product.ten_sach %>">
                                </a>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title flex-grow-1"
                                    style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; text-overflow: ellipsis; line-height: 1.4em; height: 2.8em;">
                                    <a href="/products/<%= product.id %>" class="text-decoration-none text-dark"
                                        title="<%= product.ten_sach %>">
                                        <%= product.ten_sach %>
                                    </a>
                                </h6>
                                <p class="card-text text-danger fw-bold">
                                    <%= parseFloat(product.gia_bia).toLocaleString('vi-VN') %>đ
                                </p>
                            </div>
                            <div class="card-footer bg-white border-0 py-2 d-flex gap-2">
                                <button onclick="addToCart('<%= product.id %>')"
                                    class="btn btn-sm btn-primary flex-grow-1">Thêm vào giỏ</button>

                                <!-- Logic nút yêu thích: Vì trang này chỉ hiện sách đã thích, nên isFav luôn là true -->
                                <% const isFav=true; %>
                                    <button class="btn btn-favorite-card btn-favorite border"
                                        data-id="<%= product.id %>" title="Bỏ thích">
                                        <i class="fas text-danger fa-heart"></i>
                                    </button>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <% } else { %>
                <div class="text-center p-5 border rounded bg-light">
                    <i class="far fa-heart fa-3x text-muted mb-3"></i>
                    <p class="lead mb-3">Bạn chưa có sản phẩm yêu thích nào.</p>
                    <a href="/products" class="btn btn-primary">Khám phá sách ngay</a>
                </div>
                <% } %>

    </div>

    <script src="/js/cart.js"></script>
    <script src="/js/favorite.js"></script>
    <%- include('../partials/footer') %>