<%- include('../partials/header', { title: 'Trang chủ' }) %>

    <!-- ============================================ -->
    <!-- ============= HERO SLIDESHOW =============== -->
    <!-- ============================================ -->
    <section id="hero-slider-section" class="mb-5">
        <!-- Slider main container -->
        <div class="swiper" id="hero-swiper">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper" id="hero-swiper-wrapper">
                <!-- Slides sẽ được JS chèn vào đây -->
                <div class="swiper-slide"><img src="/images/slider_item_1_image.png" class="img-fluid" alt="Banner">
                </div>
                <div class="swiper-slide"><img src="/images/slider_item_2_image.png" class="img-fluid" alt="Banner">
                </div>
                <div class="swiper-slide"><img src="/images/slider_item_3_image.png" class="img-fluid" alt="Banner">
                </div>
                <div class="swiper-slide"><img src="/images/slider_item_5_image.png" class="img-fluid" alt="Banner">
                </div>
            </div>

            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>
            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </section>


    <!-- ============================================ -->
    <!-- ===== BẮT ĐẦU BỐ CỤC 2 CỘT CHÍNH ========= -->
    <!-- ============================================ -->
    <div class="row">

        <!-- ============================================ -->
        <!-- ============== CỘT TRÁI (3/12) ============== -->
        <!-- ============================================ -->
        <div class="col-lg-3">

            <!-- KHỐI SÁCH MỚI LÊN KỆ -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="section-title">SÁCH MỚI LÊN KỆ</h5>
                    <a href="/products?sortBy=createdAt&order=DESC" class="btn btn-outline-secondary btn-sm d-none">Xem
                        thêm</a>
                </div>
                <div id="new-arrivals-wrapper">
                    <!-- JS sẽ chèn các card sản phẩm dọc vào đây -->
                </div>
            </section>

            <!-- KHỐI BÀI VIẾT MỚI 
        <section class="blog-section mb-5">
            <h5 class="section-title mb-3">BÀI VIẾT MỚI</h5>
            <div class="row" id="posts-wrapper">
                
            </div>
        </section>
-->
        </div>

        <div class="col-lg-9">
            <!-- ============================================ -->
            <!-- =========== TOP SÁCH BÁN CHẠY ============ -->
            <!-- ============================================ -->
            <section class="product-section mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="section-title">TOP SÁCH BÁN CHẠY</h3>
                </div>
                <div class="swiper" id="bestseller-swiper">
                    <div class="swiper-wrapper" id="bestseller-products-wrapper">
                        <!-- Product cards sẽ được JS chèn vào đây -->
                    </div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </section>

            <!-- ============================================ -->
            <!-- ======== DANH MỤC: VĂN HỌC VIỆT NAM ========= -->
            <!-- ============================================ -->
            <section class="product-section mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="section-title">VĂN HỌC VIỆT NAM</h3>
                    <a href="/products?category=31" class="btn btn-outline-primary btn-sm d-none">Xem tất cả</a>
                </div>
                <div class="swiper" id="vh-vietnam-swiper">
                    <div class="swiper-wrapper" id="vh-vietnam-products-wrapper">
                        <!-- Product cards sẽ được JS chèn vào đây -->
                    </div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </section>

            <!-- ============================================ -->
            <!-- ======== DANH MỤC: VĂN HỌC NƯỚC NGOÀI ====== -->
            <!-- ============================================ -->
            <section class="product-section mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="section-title">VĂN HỌC NƯỚC NGOÀI</h3>
                    <a href="/products?category=5" class="btn btn-outline-primary btn-sm d-none">Xem tất cả</a>
                </div>
                <div class="swiper" id="vh-nuoc-ngoai-swiper">
                    <div class="swiper-wrapper" id="vh-nuoc-ngoai-products-wrapper">
                        <!-- Product cards sẽ được JS chèn vào đây -->
                    </div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </section>

            <!-- ============================================ -->
            <!-- ======== DANH MỤC: SÁCH KINH TẾ ============ -->
            <!-- ============================================ -->
            <section class="product-section mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="section-title">SÁCH KINH TẾ</h3>
                    <a href="/products?category=1" class="btn btn-outline-primary btn-sm d-none">Xem tất cả</a>
                </div>
                <div class="swiper" id="finance-swiper">
                    <div class="swiper-wrapper" id="finance-products-wrapper">
                        <!-- Product cards sẽ được JS chèn vào đây -->
                    </div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </section>

        </div>

        <section class="contact-cta py-3 mb-4 bg-white rounded-4 shadow-sm mt-3">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-7 mb-3 mb-lg-0">
                        <div class="d-flex align-items-center mb-2">
                            <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-2">
                                <i class="fas fa-headset fs-4 text-primary"></i>
                            </div>
                            <h4 class="fw-bold mb-0">Bạn cần hỗ trợ nhanh?</h4>
                        </div>
                        <p class="text-muted small mb-3">Đội ngũ của <strong>Book Zone</strong> luôn sẵn sàng giải đáp
                            mọi thắc mắc của bạn.</p>
                        <div class="row g-2">
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-phone-alt text-success me-2 small"></i>
                                    <div>
                                        <div class="fw-bold small">
                                            <%= site ? site.so_dien_thoai : '0969 671 344' %>
                                        </div>
                                        <small class="text-muted" style="font-size: 0.72rem;">Hotline Tư vấn</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-envelope text-info me-2 small"></i>
                                    <div>
                                        <div class="fw-bold small text-truncate">
                                            <%= site ? site.email : 'bookzonestore07@gmail.com' %>
                                        </div>
                                        <small class="text-muted" style="font-size: 0.72rem;">Email phản hồi</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-5 text-lg-end">
                        <a href="/contact" class="btn btn-primary px-4 py-2 rounded-pill fw-bold shadow-sm">
                            <i class="fas fa-paper-plane me-2"></i> Gửi yêu cầu
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <script>
            window.favoriteProductIds = <% - JSON.stringify(typeof favoriteProductIds !== 'undefined' ? favoriteProductIds : []) %>;
        </script>
        <script src="/js/cart.js"></script>
        <script src="/js/favorite.js"></script>
        <%- include('../partials/footer') %>