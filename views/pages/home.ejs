<%- include('../partials/header', { title: 'Trang chủ' }) %>

    <!-- ============================================ -->
    <!-- ============= HERO SLIDESHOW =============== -->
    <!-- ============================================ -->
    <section id="hero-slider-section" class="mb-5">
        <!-- Slider main container -->
        <div class="swiper" id="hero-swiper">
            <!-- Additional required wrapper -->
            <div class="swiper-wrapper" id="hero-swiper-wrapper">
                <!-- Slides sẽ được JS chèn vào đây -->
                <div class="swiper-slide"><img src="/images/slider_item_1_image.png" class="img-fluid" alt="Banner">
                </div>
                <div class="swiper-slide"><img src="/images/slider_item_2_image.png" class="img-fluid" alt="Banner">
                </div>
                <div class="swiper-slide"><img src="/images/slider_item_3_image.png" class="img-fluid" alt="Banner">
                </div>
                <div class="swiper-slide"><img src="/images/slider_item_5_image.png" class="img-fluid" alt="Banner">
                </div>
            </div>

            <!-- If we need pagination -->
            <div class="swiper-pagination"></div>
            <!-- If we need navigation buttons -->
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </section>


    <!-- ============================================ -->
    <!-- ===== BẮT ĐẦU BỐ CỤC 2 CỘT CHÍNH ========= -->
    <!-- ============================================ -->
    <div class="row">

        <!-- ============================================ -->
        <!-- ============== CỘT TRÁI (3/12) ============== -->
        <!-- ============================================ -->
        <div class="col-lg-3">

            <!-- KHỐI SÁCH MỚI LÊN KỆ -->
            <section class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="section-title">SÁCH MỚI LÊN KỆ</h5>
                    <a href="/products?sortBy=createdAt&order=DESC" class="btn btn-outline-secondary btn-sm d-none">Xem
                        thêm</a>
                </div>
                <div id="new-arrivals-wrapper">
                    <% if (typeof newProducts !== 'undefined' && newProducts.length > 0) { %>
                        <% newProducts.forEach(function(product) { %>
                            <div class="card mb-3 border-0">
                                <div class="row g-0">
                                    <div class="col-4">
                                        <a href="/products/<%= product.id %>" class="position-relative d-block">
                                            <img src="<%= product.img && (product.img.startsWith('/') || product.img.startsWith('http')) ? product.img : '/images/' + (product.img || 'placeholder.png') %>" 
                                                 class="img-fluid rounded-start" 
                                                 alt="<%= product.ten_sach %>"
                                                 onerror="this.onerror=null; this.src='/images/placeholder.png';">
                                        </a>
                                    </div>
                                    <div class="col-8">
                                        <div class="card-body p-2">
                                            <h6 class="card-title mb-1" style="font-size: 0.9rem;">
                                                <a href="/products/<%= product.id %>" class="text-decoration-none text-dark"><%= product.ten_sach %></a>
                                            </h6>
                                            <p class="card-text text-danger fw-bold mb-2"><%= parseFloat(product.gia_bia).toLocaleString('vi-VN') %>₫</p>
                                            <!-- Favorite Button Logic -->
                                             <% 
                                                let isFav = false;
                                                if (user && typeof favoriteProductIds !== 'undefined' && favoriteProductIds.includes(product.id)) {
                                                    isFav = true;
                                                }
                                            %>
                                            <button class="btn btn-favorite-card btn-favorite border float-end" 
                                                    data-id="<%= product.id %>" 
                                                    title="<%= isFav ? 'Bỏ thích' : 'Yêu thích' %>">
                                                <i class="<%= isFav ? 'fas text-danger' : 'far text-danger' %> fa-heart"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-muted">Không có sản phẩm mới.</p>
                    <% } %>
                </div>
            </section>

            <!-- KHỐI BÀI VIẾT MỚI 
        <section class="blog-section mb-5">
            <h5 class="section-title mb-3">BÀI VIẾT MỚI</h5>
            <div class="row" id="posts-wrapper">
                
            </div>
        </section>
-->
        </div>

        <div class="col-lg-9">
            <!-- ============================================ -->
            <!-- =========== TOP SÁCH BÁN CHẠY ============ -->
            <!-- ============================================ -->
            <section class="product-section mb-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3 class="section-title">TOP SÁCH BÁN CHẠY</h3>
                </div>
                <div class="swiper" id="bestseller-swiper">
                    <div class="swiper-wrapper" id="bestseller-products-wrapper">
                        <% if (typeof bestSellers !== 'undefined' && bestSellers.length > 0) { %>
                            <% bestSellers.forEach(function(product) { %>
                                <div class="swiper-slide">
                                    <div class="card product-card h-100">
                                        <a href="/products/<%= product.id %>">
                                            <div class="product-image position-relative">
                                                <img src="<%= product.img && (product.img.startsWith('/') || product.img.startsWith('http')) ? product.img : '/images/' + (product.img || 'default-book.png') %>" 
                                                     alt="<%= product.ten_sach %>"
                                                     onerror="this.onerror=null; this.src='/images/default-book.png';">
                                            </div>
                                        </a>
                                        <div class="card-body d-flex flex-column text-center">
                                            <h6 class="card-title">
                                                <%= product.ten_sach %>
                                            </h6>
                                            <p class="card-text text-danger fw-bold">
                                                <%= parseFloat(product.gia_bia).toLocaleString('vi-VN') %>₫
                                            </p>
                                            <div class="d-flex gap-2">
                                                <button onclick="addToCart('<%= product.id %>')" class="btn btn-sm btn-outline-primary mt-auto flex-grow-1">
                                                    Thêm vào giỏ
                                                </button>
                                                 <% 
                                                    let isFav = false;
                                                    if (user && typeof favoriteProductIds !== 'undefined' && favoriteProductIds.includes(product.id)) {
                                                        isFav = true;
                                                    }
                                                %>
                                                <button class="btn btn-favorite-card btn-favorite border" 
                                                        data-id="<%= product.id %>" 
                                                        title="<%= isFav ? 'Bỏ thích' : 'Yêu thích' %>">
                                                    <i class="<%= isFav ? 'fas text-danger' : 'far text-danger' %> fa-heart"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="text-center w-100 p-3">Đang cập nhật dữ liệu sách bán chạy...</div>
                        <% } %>
                    </div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </section>

            <!-- ============================================ -->
            <!-- ======== DANH MỤC NỔI BẬT (DYNAMIC) ========= -->
            <!-- ============================================ -->
             <% if (typeof featuredCategories !== 'undefined' && featuredCategories.length > 0) { %>
                <% featuredCategories.forEach(function(category) { %>
                    <section class="product-section mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h3 class="section-title text-uppercase"><%= category.ten_danh_muc %></h3>
                            <a href="/products?category=<%= category.id %>" class="btn btn-outline-primary btn-sm">Xem tất cả</a>
                        </div>
                        <div class="swiper" id="featured-swiper-<%= category.id %>">
                            <div class="swiper-wrapper">
                                <% if (category.products && category.products.length > 0) { %>
                                    <% category.products.forEach(function(product) { %>
                                        <div class="swiper-slide">
                                            <div class="card product-card h-100">
                                                <a href="/products/<%= product.id %>">
                                                    <div class="product-image position-relative">
                                                        <img src="<%= product.img && (product.img.startsWith('/') || product.img.startsWith('http')) ? product.img : '/images/' + (product.img || 'default-book.png') %>" 
                                                             alt="<%= product.ten_sach %>"
                                                             onerror="this.onerror=null; this.src='/images/default-book.png';">
                                                    </div>
                                                </a>
                                                <div class="card-body d-flex flex-column text-center">
                                                    <h6 class="card-title">
                                                        <%= product.ten_sach %>
                                                    </h6>
                                                    <p class="card-text text-danger fw-bold">
                                                        <%= parseFloat(product.gia_bia).toLocaleString('vi-VN') %>₫
                                                    </p>
                                                    <div class="d-flex gap-2">
                                                        <button onclick="addToCart('<%= product.id %>')" class="btn btn-sm btn-outline-primary mt-auto flex-grow-1">
                                                            Thêm vào giỏ
                                                        </button>
                                                        <% 
                                                            let isFav = false;
                                                            if (user && typeof favoriteProductIds !== 'undefined' && favoriteProductIds.includes(product.id)) {
                                                                isFav = true;
                                                            }
                                                        %>
                                                        <button class="btn btn-favorite-card btn-favorite border" 
                                                                data-id="<%= product.id %>" 
                                                                title="<%= isFav ? 'Bỏ thích' : 'Yêu thích' %>">
                                                            <i class="<%= isFav ? 'fas text-danger' : 'far text-danger' %> fa-heart"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="text-center w-100 p-3">Chưa có sản phẩm trong danh mục này.</div>
                                <% } %>
                            </div>
                            <div class="swiper-button-prev"></div>
                            <div class="swiper-button-next"></div>
                        </div>
                        <script>
                            document.addEventListener('DOMContentLoaded', function() {
                                new Swiper("#featured-swiper-<%= category.id %>", {
                                    slidesPerView: 2,
                                    spaceBetween: 20,
                                    navigation: {
                                        nextEl: "#featured-swiper-<%= category.id %> .swiper-button-next",
                                        prevEl: "#featured-swiper-<%= category.id %> .swiper-button-prev",
                                    },
                                    breakpoints: {
                                        576: { slidesPerView: 2, spaceBetween: 20 },
                                        768: { slidesPerView: 3, spaceBetween: 20 },
                                        992: { slidesPerView: 4, spaceBetween: 20 },
                                        1200: { slidesPerView: 5, spaceBetween: 20 }
                                    }
                                });
                            });
                        </script>
                    </section>
                <% }); %>
            <% } %>

        </div>

        <script>
            window.favoriteProductIds = <% - JSON.stringify(typeof favoriteProductIds !== 'undefined' ? favoriteProductIds : []) %>;
        </script>
        <script src="/js/cart.js"></script>
        <script src="/js/favorite.js"></script>
        <%- include('../partials/footer') %>