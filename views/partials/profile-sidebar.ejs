<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-0">
        <div class="list-group list-group-flush rounded">
            <a href="/profile" class="list-group-item list-group-item-action py-3 <%= typeof activePage !== 'undefined' && activePage === 'profile' ? 'active disabled' : '' %>">
                <i class="fas fa-user-circle me-3"></i> Thông tin tài khoản
            </a>
            <a href="/my-orders" class="list-group-item list-group-item-action py-3 <%= typeof activePage !== 'undefined' && activePage === 'orders' ? 'active disabled' : '' %>">
