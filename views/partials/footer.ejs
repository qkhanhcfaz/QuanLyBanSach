<% const s=site || {}; %>

  <footer class="bg-dark text-white pt-5 pb-4 mt-5">
    <div class="container text-center text-md-start">
      <!-- Service Bar -->
      <div class="row pb-4 border-bottom border-secondary mb-4 text-center">
        <div class="col-6 col-md-3 mb-3">
          <i class="fa-solid fa-truck fs-2 mb-2 text-primary"></i>
          <p class="mb-0">MIỄN PHÍ VẬN CHUYỂN</p>
          <small class="text-white-50">Cho đơn hàng từ 300.000đ</small>
        </div>

        <div class="col-6 col-md-3 mb-3">
          <i class="fa-solid fa-headset fs-2 mb-2 text-primary"></i>
          <p class="mb-0">HỖ TRỢ 24/7</p>
          <small class="text-white-50">Hotline: <%= s.so_dien_thoai || '0339.952.573' %></small>
        </div>

        <div class="col-6 col-md-3 mb-3">
          <i class="fa-solid fa-arrows-rotate fs-2 mb-2 text-primary"></i>
          <p class="mb-0">MIỄN PHÍ ĐỔI TRẢ</p>
          <small class="text-white-50">Trong vòng 10 ngày</small>
        </div>

        <div class="col-6 col-md-3 mb-3">
          <i class="fa-solid fa-shield-halved fs-2 mb-2 text-primary"></i>
          <p class="mb-0">THANH TOÁN AN TOÀN</p>
          <small class="text-white-50">Thanh toán khi nhận hàng</small>
        </div>
      </div>

      <!-- Main Footer Content -->
      <div class="row mt-3">
        <!-- Cột 1: Giới thiệu -->
        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
          <div class="d-flex align-items-center gap-2 mb-2">
            <img src="/images/logo.png" alt="Logo" style="height: 48px; width: auto;">
            <h6 class="text-uppercase fw-bold mb-0">
              <%= s.ten_website || 'BookZone' %>
            </h6>
          </div>

          <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #0d6efd; height: 2px" />
          <p>
            <%= s.mo_ta || 'Nơi tri thức bắt đầu. Khám phá hàng ngàn đầu sách hấp dẫn, ebook, truyện tranh và các combo ưu đãi đặc biệt.' %>
          </p>
        </div>

        <!-- Cột 2 -->
        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
          <h6 class="text-uppercase fw-bold">Về chúng tôi</h6>
          <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #0d6efd; height: 2px" />
          <p><a href="/about" class="text-white-50">Về chúng tôi</a></p>
          <p><a href="/careers" class="text-white-50">Tuyển dụng</a></p>
          <p><a href="/terms" class="text-white-50">Điều khoản</a></p>
        </div>

        <!-- Cột 3 -->
        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
          <h6 class="text-uppercase fw-bold">Hỗ trợ khách hàng</h6>
          <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #0d6efd; height: 2px" />
          <p><a href="/guide" class="text-white-50">Hướng dẫn mua hàng</a></p>
          <p><a href="/return-policy" class="text-white-50">Chính sách đổi trả</a></p>
          <p><a href="/faq" class="text-white-50">Câu hỏi thường gặp</a></p>
        </div>

        <!-- Cột 4: Liên hệ (dữ liệu từ SiteSetting) -->
        <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
          <h6 class="text-uppercase fw-bold">Liên hệ</h6>
          <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #0d6efd; height: 2px" />

          <p><i class="fas fa-home me-3"></i>
            <%= s.dia_chi || 'Chưa cập nhật địa chỉ' %>
          </p>
          <p><i class="fas fa-envelope me-3"></i>
            <%= s.email || 'Chưa cập nhật email' %>
          </p>
          <p><i class="fas fa-phone me-3"></i>
            <%= s.so_dien_thoai || 'Chưa cập nhật SĐT' %>
          </p>

          <!-- Social (đúng theo DB: facebook, instagram, twitter, linkedin) -->
          <div class="mt-3 d-flex gap-3">
            <% if (s.facebook) { %>
              <a class="text-white-50" href="<%= s.facebook %>" target="_blank" rel="noopener">
                <i class="fab fa-facebook fs-4"></i>
              </a>
              <% } %>

                <% if (s.instagram) { %>
                  <a class="text-white-50" href="<%= s.instagram %>" target="_blank" rel="noopener">
                    <i class="fab fa-instagram fs-4"></i>
                  </a>
                  <% } %>

                    <% if (s.twitter) { %>
                      <a class="text-white-50" href="<%= s.twitter %>" target="_blank" rel="noopener">
                        <i class="fab fa-twitter fs-4"></i>
                      </a>
                      <% } %>

                        <% if (s.linkedin) { %>
                          <a class="text-white-50" href="<%= s.linkedin %>" target="_blank" rel="noopener">
                            <i class="fab fa-linkedin fs-4"></i>
                          </a>
                          <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2)">
      © <%= s.nam_ban_quyen || 2026 %> Bản quyền thuộc về:
        <a class="text-white" href="/">
          <%= s.ten_website || 'bookzone.com' %>
        </a>
    </div>
  </footer>

  <!-- Bootstrap JS (bundle bao gồm cả Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <!-- Swiper.js -->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Custom JS của bạn -->
  <script src="/js/main.js"></script>
  </body>

  </html>
